<Window x:Class="Wpf5.Readerw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf5"
        mc:Ignorable="d"
        Title="Readerw" Height="450" Width="800">
    <Grid>
        <Label Content="Book ID:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="bookIdTextBox" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Reader ID:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="readerIdTextBox" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="Buy Book" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="10,90,0,0" Click="ButtonBuyBook_Click"/>
    </Grid>
</Window>
